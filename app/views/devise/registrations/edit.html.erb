
<div class="content mt-3">
    <div class="animated fadeIn">


        <div class="row">

        <div class="col-lg-8">
            <div class="card">
                <div class="card-header"> <%= title('Editar Perfil') %> <%= resource_name.to_s.humanize %></div>
                <div class="card-body card-block">

                  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                    <%= render "devise/shared/error_messages", resource: resource %>
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-addon"><i class="fa fa-user"></i></div>
                            <%= f.text_field :name, placeholder: "Digite seu nome", class: "form-control" %>
                          </div>
                    </div>

                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-addon"><i class="fa fa-user"></i></div>
                            <%= f.text_field :last_name, placeholder: "Sobre nome", class: "form-control" %>
                          </div>
                    </div>

                      <div class="form-group">
                        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                        <% end %>
                          <div class="input-group">
                              <div class="input-group-addon"><i class="fa fa-envelope"></i></div>
                              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
                          </div>
                      </div>
                      <div class="form-group">
                          <div class="input-group">
                              <div class="input-group-addon"><i class="fa fa-asterisk"></i></div>
                              <%= f.password_field :password, autocomplete: "new-password",placeholder: "Sua senha atual", class: 'form-control' %>
                          </div>
                      </div>
                      <div class="form-group">
                          <div class="input-group">
                              <div class="input-group-addon"><i class="fa fa-asterisk"></i></div>
                              <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirme sua nova senha", class: 'form-control' %>
                          </div>
                      </div>

<p></p>



                        <div class="field">
                          <%= f.label :current_password %> <i>(Nós precisamos que você digite sua senha atual para confirmar as alterações)</i><br />
                          <%= f.password_field :current_password, autocomplete: "current-password", placeholder: "Digite sua senha atual para confirmar", class: 'form-control' %>
                        </div>

                        <div class="form-actions form-group">
<p></p>
                          <%= f.submit "Atualizar", class: 'btn btn-success ' %>

                      </div>
                      <% end %>







                </div>
            </div>
        </div>
