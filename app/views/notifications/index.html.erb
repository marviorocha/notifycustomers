<%= render 'shered/breadcromb' %>

<div class="animated fadeIn">
  <div class="row">

    <div class="col-md-12">
      <div class="card">
        <div class="card-header">
          <strong class="card-title"><%= title('Notificações') %></strong>
        </div>
        <div class="card-body">
          <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
            <thead>
              <tr>
                <th>Titulo:</th>
                <th>Para:</th>
                <th>Agendado em:</th>
                <th>Anotações do cliente:</th>
                <th>Ação</th>

                </tr>
              </thead>
              <tbody>
            <% @notification.each do |notification| %>
                <tr>
                  <td><%= notification.title %></td>
                  <td><b><%= notification.client.name %></b></td>
                  <td><span class="badge badge-info">
                     <%= notification.calendar.strftime("%d/%m/%Y %-l:%M %P") %> </span> </td>
                  <td>
                    <% if notification.client.notes.size > 0  %>
                    <a href="<%= client_path(notification.client.id) %>" type="button" class="btn btn-primary">
                      Anotações <span class="badge badge-light"> <%= notification.client.notes.size %> </span>
                    </a>
                    <% else %>
                    <% end %>
                   </td>
                  <td>
<%= link_to "Editar", edit_notification_path(notification), class: "btn btn-info" %>
                    <%= link_to "Excluir", notification_path(notification), method: :delete, data: {confirm: "Deseja deletar esse item?"}, class: "btn btn-danger" %></td>
                  </td>
          <% end %>



                </tr>


              </tbody>
            </table>
            <p></p>




<p></p>


<ul class="list-group">
  <li class="list-group-item">  <strong class="card-title font-weight-bold">Notificações enviadas</strong></li>

<% @notification_send.each do |sender| %>
  <li class="list-group-item list-group-item-light"><%= sender.title %> - <b> <%= sender.client.name %> </b>
     <%= link_to "<i class='fa fa-trash'></i>".html_safe, notification_path(sender),
     method: :delete, data: {confirm: "Deseja deletar esse item?"}, class: "btn btn-xs btn-danger text-right" %></li>
<% end %>
</ul>





          </div>
        </div>

      </div>


    </div>
  </div><!-- .animated -->

  <!-- Card Aniversário  -->



</div><!-- .content -->
