        <% title('Clientes') %>

        <div class="row">

          <div class="col-lg-12">

            <!-- Default Card Example -->
            <div class="card mb-4">
              <div class="card-header">
                #ID <%= @client.id %>
              </div>
              <div class="card-body">
                <span class="pb-2 display-5"><b>Nome:</b> <%= @client.name %></span> <br>
                <span class="pb-2 display-5"><b>E-mail:</b> <%= @client.email %> </span> <br>
                <span class="pb-2 display-5"><b>Telefone:</b> <%= @client.tel %> </span> <br>
                <span class="pb-2 display-5"><b>Celular:</b> <%= @client.cel %> </span> <br>
                <span class="pb-2 display-5"><b>Cpf:</b> <%= @client.cpf %> </span> <br>
                <span class="pb-2 display-5"><b>Endereço:</b> <%= @client.address %> </span><br>
                <span class="pb-2 display-5"><b>Aniversário:</b> <%= @client.birthday.strftime("%d/%m/%Y") %> </span>
              </div>
            </div>
          </div>
<% print 'some text some text ' %>
  

        </div>

 

        <table class="table table-bordered" width="100%" cellspacing="0" class="table table-striped">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Titulo</th>
              <th>Nota</th>

              <th scope="col">Deletar</th>
            </tr>
          </thead>
          <tbody>
            <% @notes.each do |note| %>
            <% if note.id == "0" %>
            Nenhuma anotação feita para esse cliente
            <% else %>

            <tr>
              <th scope="row"><%= note.id %></th>
              <td> <b><%= note.title %></b> <br>
                <dd>Nota:</dd><%= note.messager %>
              </td>

              <td class="text-muted"><%= time_ago_in_words(note.created_at).capitalize %></td>
              <td>
                <%= link_to "Deletar", note_path(note), method: :delete, data: {confirm: "Deseja deletar está anotação"}, class: "btn btn-danger" %>
              </td>
            </tr>
            <% end %>
            <% end %>
          </tbody>
        </table>




<%= render "notes/form", notes: @notes %>




