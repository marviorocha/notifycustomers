        <div class="breadcrumbs">
            <div class="col-sm-4">
                <div class="page-header float-left">
                    <div class="page-title">
                        <h1>Dashboard</h1>
                    </div>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="page-header float-right">
                    <div class="page-title">
                        <ol class="breadcrumb text-right">
                            <li><a href="#">Dashboard</a></li>
                            <li><a href="#">Table</a></li>
                            <li class="active">Data table</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>

        <div class="content mt-3">
            <div class="animated fadeIn">
                <div class="row">

                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <strong class="card-title"><%= title('Gerenciar Cliente') %></strong>
                            </div>
                            <div class="card-body">
                                <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Nome</th>
                                            <th>E-mail</th>
                                            <th>Criado em:</th>
                                            <th>Ação</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                      <% @user.each do |client| %>
                                        <tr>
                                            <td><b><%= client.name %></b></td>
                                            <td><%= client.email %></td>
                                            <td><%= client.created_at.strftime("%-d / %m / %Y") %></td>
                                            <td>

                                        <a href="<%= edit_client_path(client) %>"  class="btn btn-primary"><i class="fa fa-edit"></i> Editar</a>

                                       <%= link_to "<i class='fa fa-trash' ></i> Delete".html_safe,
                                           client_path(client),
                                         method: :delete, data: { confirm: 'Você realmente deseja deletar ?' }, class: "btn btn-danger"  %>


                                            </td>
                                        </tr>
                                        <% end %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>


                </div>
            </div><!-- .animated -->
        </div><!-- .content -->


