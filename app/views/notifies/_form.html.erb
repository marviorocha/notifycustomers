
<div class="content mt-3">
    <div class="animated fadeIn">

        <div class="row">

        <div class="col-lg-8">
            <div class="card">
                <div class="card-header"> <%= User.name %> </div>
                <div class="card-body card-block">

                  <%= form_with model: notify, local:true do |f| %>


                  <div class="form-row">

                    <div class="form-group col-md-12">
                      <%= f.label :title, 'Titulo' %>:
                      <%= f.text_field :name, placeholder: 'Digite o Titulo', class: "form-control" %>
                      </div>





                      <div class="form-group col-md-12">
                          <%= f.label :messager, 'Mensagem:' %>
                          <%= f.text_area :messager, class: "form-control" %>
                      </div>
                        <div class="form-group col-md-12">
                      <div class="form-check">
                        <%= f.check_box :delevery, class: "form-check-input" %>

                        <%= f.label :delivery, 'Enviar agora', class:'form-check-label' %>

                      </div>
                      </div>
                      <div class="form-group col-md-6">
                        <%= f.label :agendado, 'Agendado' %>:
                        <%= f.datetime_local_field :delivery, placeholder: 'Digite o Titulo', class: "form-control" %>
                        </div>


  </div>



                        <div class="form-actions form-group">
<p></p>
                        <div class="text-left">
                            <%= f.submit "Salvar", class: 'btn btn-success ' %>
                        </div>
                            <div class="text-right">
                              <%= link_to 'Voltar', clients_path, class: "btn btn-info" %>
                            </div>

                      </div>
                      <% end %>


              </div>
            </div>
    </div>
